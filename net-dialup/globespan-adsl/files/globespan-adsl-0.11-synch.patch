+	struct usbdevfs_urb urb, *purb = &urb;
+	int ret;
+
+	memset(purb, 0, sizeof(urb));
+
+	purb->type = USBDEVFS_URB_TYPE_INTERRUPT;
+	purb->endpoint = ep;
+	purb->flags  = 0;
+	purb->buffer = buf;
+	purb->buffer_length = size;
+	purb->signr = 0;
+
+	do
+	{
+		ret = ioctl(fd, USBDEVFS_SUBMITURB, purb);
+	}
+	while (ret < 0 && errno == EINTR);
+
